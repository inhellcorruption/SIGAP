@{
	ViewData["Title"] = "TambahBarang";
	ViewBag.subTitle = "StockGudang";
	ViewBag.pageTitle = "Lexa";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<h1>TambahBarang</h1>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<label for="NamaBarang">Nama Barang*</label>
							<input type="text" name="Nama Barang" class="form-control " id="namabarang" value="" placeholder="Masukkan Nama Barang" required>
						</div>
						<div class="form-group">
							<label for="Jumlah">Jumlah Awal*</label>
							<input type="text" name="Jumlah" class="form-control " maxlength="18" size="18" id="nip" value="" placeholder="Masukkan Jumlah Barang" required>
						</div>
						<div class="form-group">
							<label for="position">Kategori</label>
							<select id="position" name="position" class="form-control " value="" required>
								<option disabled>-Safety-</option>
								<option value="">PELINDUNG TANGAN</option>
								<option value="">PELINDUNG KEPALA</option>
								<option value="">PELINDUNG MATA</option>
								<option value="">FIRE BLANKET & LIFE JACKET</option>
								<option value="">SAFETY LINE , SAFETY NET , HARNESS & PADLOCK</option>
								<option value="">PELINDUNG KAKI</option>
								<option disabled>-EMERGENCY & INSURANCE-</option>
								<option value="">MAINTENANCE EQUIPMENT</option>
								<option value="">FIRE SUPPORT EQUIPMENT</option>
								<option value="">-OCCUPATIONAL HEALTH-</option>
							</select>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label for="MSL">Minimum Stock Level(MSL)*</label>
							<input type="text" name="MSL" class="form-control " id="email" value="" placeholder="Masukkan email" required>
						</div>
						<div class="form-group">
							<label for="userphoto">Upload*</label><br>
							<div class="btn btn-file">

								<input type="file" id="userphoto" name="userphoto" accept="image/png, image/gif, image/jpeg" onchange="loadImage(event)">
							</div>
						</div>
					</div>
					<div class="card-footer">
						<a></a>
						<button type="submit" class="btn btn-primary" style="float:right">Add</button>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
