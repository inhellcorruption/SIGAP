@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<style>
    body {
        background: url('/assets/images/Background.png') no-repeat center center fixed;
        background-size: cover;
    }

    .card {
        border-radius: 1rem;
        box-shadow: 0 0 15px rgba(0,0,0,0.3);
        border: 2px solid #ccc; 
        background-color: rgba(255, 255, 255, 0.95); 
    }

    .btn-login {
        background-color: #e60000;
        color: white;
        font-weight: bold;
        border-radius: 0.3rem;
        padding: 0.5rem 2rem;
    }

    .input-group-text {
        background-color: #ffffff;
        border-right: 0;
    }

    .form-control {
        border-left: 0;
    }
</style>


<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card p-4">
                    <div class="text-center mb-3">
                        <img src="~/assets/images/logo-pertamina.png" alt="Logo" height="100" class="mb-2">
                        <hr class="logo-underline">
                    </div>

                    <form class="form-horizontal mt-3" action="/">
                        <div class="mb-3">
                            <select class="form-select">
                                <option selected disabled>- Pilih Perusahaan -</option>
                                <option>Item 01</option>
                                <option>Item 02</option>
                                <option>Item 03</option>
                                <option>Item 04</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                                <input type="text" class="form-control" placeholder="Email">
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                                <input type="password" class="form-control" placeholder="Password">
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button class="btn btn-login w-100" type="submit">Login</button>
                        </div>
                    </form>
                </div>
                <div class="mt-4 text-center text-black">
                    <small><script>document.write(new Date().getFullYear())</script> © PT Kilang Pertamina Internasional</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/js/app.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
